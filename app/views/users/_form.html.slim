= form_with(model: @user, local: true) do |form|
  = render partial: 'partials/form_errors', locals: { model: @user }
  .form-group
    = form.label :name
    = form.text_field :name, class: 'form-control'
  .form-group
    = form.label :email
    = form.text_field :email, class: 'form-control'
  .actions
    = form.submit 'Save', class: 'btn btn-sm btn-dark'
      = link_to 'Back', user_path, class: "btn btn-sm  btn-outline-dark ml-2"
    - if controller_name == 'users'
      = link_to 'Change passord', edit_user_registration_path, class: 'btn btn-sm btn-outline-danger ml-2'
